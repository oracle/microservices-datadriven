# Fail on error
set -e

## Launch TEQ consumer microservice.
echo "Launching TEQ consumer microservice!"

container_name="teq-consumer"
docker run --detach \
           --name=${container_name} \
           --network $(state_get LAB_KAFKA_NETWORK) \
           oracle-developers-okafka-consumer:0.0.1-SNAPSHOT

if ! state_done TEQ_MS_CONSUMER_LAUNCHED; then
  echo "$(date): Waiting for consumer running!"
  sleep 3
  echo
fi

if [ "$( docker container inspect -f '{{.State.Status}}' ${container_name} )" == "running" ]; then
  echo "TEQ consumer microservice is running!";
else
  echo "TEQ consumer microservice launching failed!";
fi
